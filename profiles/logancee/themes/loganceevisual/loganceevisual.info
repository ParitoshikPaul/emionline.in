name = Logancee visual base theme
description = Logancee crowdfunding base theme
core = 7.x
base theme = bootstrap

; Logo and Name toggle
; --------------
settings[toggle_name] = 0
settings[toggle_logo] = 1

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[navigation_mobile]     = 'Navigation mobile'
regions[search]     = 'search'
regions[currency] = 'currency'
regions[language_switch] = 'Language Swticher'
regions[header_top]         = 'Header Top'
regions[vertical_header_content]         = 'Vertical Header content'
regions[header]         = 'Top Bar'
regions[hero]           = 'Hero Unit'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_first_sticky]  = 'Primary sticky'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;
stylesheets[all][] = fonts/elegantfont/css/elegantfont.css
stylesheets[all][] = bower_components/simple-line-icons/css/simple-line-icons.css
stylesheets[all][] = bower_components/font-awesome/css/font-awesome.min.css
stylesheets[all][] = bower_components/owl.carousel/dist/assets/owl.carousel.min.css
stylesheets[all][] = bower_components/owl.carousel/dist/assets/owl.theme.default.min.css
stylesheets[all][] = bower_components/bootstrap-select/dist/css/bootstrap-select.min.css
stylesheets[all][] = bower_components/animation.css/animate.min.css
stylesheets[all][] = bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css
stylesheets[all][] = bower_components/jquery-colorbox/example1/colorbox.css
stylesheets[all][] = css/logancee/grid.css
stylesheets[all][] = css/logancee/accordion.css
stylesheets[all][] = css/logancee/configurable.css
stylesheets[all][] = css/logancee/responsive.css
stylesheets[all][] = css/logancee/colorbox/colorbox.css
stylesheets[all][] = css/main.css
stylesheets[all][] = css/tb_megamenu.css

